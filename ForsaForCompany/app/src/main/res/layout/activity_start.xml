<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ui.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/startToolbar"
            layout="@layout/header_start_activity" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardBackgroundColor="@color/white"
            android:outlineAmbientShadowColor="@color/black"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center"
                        android:fontFamily="@font/material_icon"
                        android:text="@string/ic_clock"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/_28sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:text="00:00"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor" />

                    <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format12Hour="MM/dd/yyyy"
                        android:textSize="@dimen/_14sdp"
                        android:text="00/00/0000"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:elevation="@dimen/_35sdp"
            app:cardBackgroundColor="@color/white"
            android:outlineAmbientShadowColor="@color/black"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ic_company"
                        android:layout_gravity="center"
                        android:fontFamily="@font/material_icon"
                        android:textSize="@dimen/_23sdp"
                        android:textColor="@color/mainColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/company"
                        android:textColor="@color/mainColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="255"
                        android:textColor="@color/mainColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ic_user"
                        android:layout_gravity="center"
                        android:fontFamily="@font/material_icon"
                        android:textSize="@dimen/_23sdp"
                        android:textColor="@color/mainColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/user"
                        android:textColor="@color/mainColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1504"
                        android:textColor="@color/mainColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ic_download"
                        android:layout_gravity="center"

                        android:fontFamily="@font/material_icon"
                        android:textSize="@dimen/_23sdp"
                        android:textColor="@color/mainColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/downlaod"
                        android:textColor="@color/mainColor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="6054"
                        android:textColor="@color/mainColor" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:elevation="@dimen/_35sdp"
            app:cardBackgroundColor="@color/white"
            android:outlineAmbientShadowColor="@color/black"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical"
                android:padding="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/ic_ads"
                        android:fontFamily="@font/material_icon"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/_23sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="@string/announcement"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/_18sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/mainColor" />

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:outlineSpotShadowColor="@color/black"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/mainColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/material_icon"
                    android:gravity="center"
                    android:text="@string/ic_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnRegstrion"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/mainColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/material_icon"
                    android:gravity="center"
                    android:text="@string/ic_regstrion"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/regstrion"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAboutApp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/mainColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/material_icon"
                    android:gravity="center"
                    android:text="@string/ic_about_us"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/about_app"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/btnAboutUs"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/mainColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/material_icon"
                    android:gravity="center"
                    android:text="@string/ic_about_us"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/about_us"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnContactUs"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/mainColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/material_icon"
                    android:gravity="center"
                    android:text="@string/ic_contact_us"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/contact_us"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnVisit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/mainColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/material_icon"
                    android:gravity="center"
                    android:text="@string/ic_visit_website"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/visit_website"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>